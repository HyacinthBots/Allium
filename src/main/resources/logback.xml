<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%boldGreen(%d{yyyy-MM-dd}) %gray(,) %boldYellow(%d{HH:mm:ss}) %gray(|) %highlight(%5level) %gray(|) %boldMagenta(%40.40logger{40}) %gray(|) %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- this block normally goes under the file block -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

    <!--    <logger name="io.lettuce.core" level="TRACE">-->
